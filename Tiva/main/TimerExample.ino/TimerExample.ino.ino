  unsigned long ulPeriod = (SYSTEM_CLOCK / Hz);
  TimerLoadSet(TIMER6_BASE, TIMER_A, ulPeriod - 1);
  TimerIntRegister(TIMER6_BASE, TIMER_A, Timer2IntHandler);
  IntEnable(INT_TIMER6A);
